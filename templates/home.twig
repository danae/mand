{% extends "index.twig" %}

{% block main %}
  <h2>Shorten and brand any URL</h2>
  <p>Use <a href="https://github.com/dengsn/mand">Mand</a> to shorten and brand your long URLs.</p>

    <h2>Shortened URLs</h2>
    <p>This table lists all URLs that shortened so far.</p>

    <div class="card">
      <table class="table table-sm mb-0">
        <thead class="thead-dark">
          <tr>
            <th style="width: 20%">Short URL</th>
            <th style="width: 50%">Original URL</th>
            <th style="width: 20%">Created</th>
            <th style="width: 10%" class="text-right">Hits</th>
          </tr>
        </thead>
        <tbody>
          {% if urls is defined and urls|length > 0 %}
            {% for url in urls %}
              <tr>
                <td><a href="{{ url.url }}">{{ url.id }}</a></td>
                <td><a href="{{ url.url }}">{{ url.url }}</a></td>
                <td>{{ url.created|date('M d, Y') }}</td>
                <td class="text-right">{{ url.hits }}</td>
              </tr>
            {% endfor %}
          {% else %}
            <tr>
              <td colspan="4">No URLs found</td>
            </tr>
          {% endif %}
        </tbody>
      </table>
    </div>
{% endblock %}
